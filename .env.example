# HelixVault Environment Configuration
# Copy this to .env and fill in your values

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================

# Your wallet private key (NEVER commit this!)
PRIVATE_KEY=

# RPC URLs
POLYGON_RPC_URL=https://polygon-rpc.com
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Contract addresses (set after deployment)
HELIX_CONTRACT_ADDRESS=
HELIX_BOUNTY_CONTRACT_ADDRESS=

# Polygonscan API key for contract verification
POLYGONSCAN_API_KEY=

# ===========================================
# IPFS / PINATA CONFIGURATION
# ===========================================

# Get these from https://app.pinata.cloud/keys
HELIX_PINATA_API_KEY=
HELIX_PINATA_API_SECRET=

# Custom IPFS gateway (optional)
HELIX_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs

# ===========================================
# AI AGENT CONFIGURATION
# ===========================================

# OpenAI API key for natural language queries
HELIX_OPENAI_API_KEY=

# Agent wallet address
HELIX_AGENT_WALLET_ADDRESS=

# ===========================================
# API CONFIGURATION
# ===========================================

# API server settings
HELIX_DEBUG=false
HELIX_HOST=0.0.0.0
HELIX_PORT=8000

# CORS allowed origins (comma-separated)
HELIX_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
